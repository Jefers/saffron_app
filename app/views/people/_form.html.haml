= form_for(@person) do |f|
  - if @person.errors.any?
    #error_explanation
      %h2
        = pluralize(@person.errors.count, "error")
        prohibited this person from being saved:
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :telephone
    %br/
    = f.text_field :telephone
  .field
    = f.label :age
    %br/
    = f.text_field :age
  .field
    = f.label :last_seen
    %br/
    = f.datetime_select :last_seen
  .field
    = f.label :active
    %br/
    = f.check_box :active
  .actions
    = f.submit
