= form_for @enquiry do |f|
  -if @enquiry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@enquiry.errors.count, "error")} prohibited this enquiry from being saved:"
      %ul
        - @enquiry.errors.full_messages.each do |msg|
          %li= msg
  .field_hidden
    = f.text_field :user_id, :value => current_user.id
  .field
    = f.label :title
    %br/
    = f.text_field :title, :size => 5
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, :placeholder => 'required'
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name, :placeholder => 'required'
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.text_field :address_2
  .field
    = f.text_field :address_3
  .field
    = f.label :town
    %br/
    = f.text_field :town, :value => "Saffron Walden"
  .field
    = f.label :post_code
    %br/
    = f.text_field :post_code, :size => 9, :class => 'upper'
  .field
    = f.label :contact_telephone
    %br/
    = f.telephone_field :contact_telephone, :placeholder => 'required'
  .field
    = f.label :email_address
    %br/
    = f.email_field :email_address, :value => current_user.email
  .field
    = f.label :message
    %br/
    = f.text_area :message, :cols => 45, :rows => 10
  .field
    = f.check_box :domain_name_required
    = f.label :domain_name_required
  .field
    = f.check_box :website_hosting_required
    = f.label :website_hosting_required
  .field
    = f.check_box :website_development_needed
    = f.label :website_development_needed

  .actions
    = f.submit 'Save'
